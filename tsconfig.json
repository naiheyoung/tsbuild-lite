{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["src", "bin"],
  "exclude": ["node_modules", "dist"]
}
